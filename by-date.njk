---
layout: layout.njk
title: Events By Date
---

<h2>UPCOMING EVENTS BY DATE</h2>
<hr>

{% set dateGroups = events | groupByDate %}

{% for group in dateGroups %}
  <section class="date-group">
    <h3>{{ group.date | readableDate }}</h3>
    <ul class="event-list">
      {% for event in group.events %}
        <li>
          * [<a href="{{ ('/by-venue/#' + event.venue_id) | url }}">{{ event.venue_id }}</a>] 
          <a href="{{ event.source_url }}" target="_blank"><strong>{{ event.title }}</strong></a> 
          [{% for cat in event.categories %}<a href="{{ ('/by-category/#' + (cat | slugify)) | url }}">{{ cat }}</a>{% if not loop.last %}, {% endif %}{% endfor %}]
          ({{ event.age_restriction }}) - {{ event.price_display }}
        </li>
      {% endfor %}
    </ul>
  </section>
{% else %}
  <p>No upcoming events found.</p>
{% endfor %}
