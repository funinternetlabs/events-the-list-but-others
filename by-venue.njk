---
layout: layout.njk
title: Events By Venue
---

<h2>UPCOMING EVENTS BY VENUE</h2>
<hr>

{% set venueGroups = events | groupByVenue(venues) %}

{% for group in venueGroups %}
  <section class="venue-group" id="{{ group.venueName | slugify }}">
    <h3>{{ group.venueName }}</h3>
    <ul class="event-list">
      {% for event in group.events %}
        <li>
          * [{{ event.start_datetime | readableDate }}] 
          <a href="{{ event.source_url }}" target="_blank"><strong>{{ event.title }}</strong></a> 
          [{% for cat in event.categories %}<a href="{{ ('/by-category/#' + (cat | slugify)) | url }}">{{ cat }}</a>{% if not loop.last %}, {% endif %}{% endfor %}]
          ({{ event.age_restriction }}) - {{ event.price_display }}
        </li>
      {% endfor %}
    </ul>
  </section>
{% else %}
  <p>No venues with upcoming events found.</p>
{% endfor %}
