---
layout: layout.njk
title: Home
---

<div class="home-hero">
  <p>Portland's most comprehensive and fast directory for nerd events.</p>
  <p><a href="{{ '/by-category/#anime' | url }}">Anime</a> | <a href="{{ '/by-category/#comics' | url }}">Comics</a> | <a href="{{ '/by-category/#tabletop' | url }}">Tabletop</a> | <a href="{{ '/by-category/#video-games' | url }}">Video Games</a> | <a href="{{ '/by-category/#tech' | url }}">Tech</a> | <a href="{{ '/by-category/#general' | url }}">General</a></p>
</div>

<div class="chronological-section">
  <h2>UPCOMING EVENTS BY DATE</h2>
  <hr>

  {% set dateGroups = events | groupByDate %}

  {% for group in dateGroups %}
    <section class="date-group">
      <h3>{{ group.date | readableDate }}</h3>
      <ul class="event-list">
        {% for event in group.events %}
          <li>
            * [<a href="{{ ('/by-venue/#' + event.venue_id) | url }}">{{ event.venue_id }}</a>] 
            <a href="{{ event.source_url }}" target="_blank"><strong>{{ event.title }}</strong></a> 
            [{% for cat in event.categories %}<a href="{{ ('/by-category/#' + (cat | slugify)) | url }}">{{ cat }}</a>{% if not loop.last %}, {% endif %}{% endfor %}]
            ({{ event.age_restriction }}) - {{ event.price_display }}
          </li>
        {% endfor %}
      </ul>
    </section>
  {% else %}
    <p>No upcoming events found.</p>
  {% endfor %}
</div>

<div class="ongoing-section">
  <h2>ONGOING ACTIVITIES</h2>
  <ul class="event-list">
    {% for event in events %}
      {% if event.start_datetime == '9999-12-31' %}
        <li>
          * [<a href="{{ ('/by-venue/#' + event.venue_id) | url }}">{{ event.venue_id }}</a>] 
          <a href="{{ event.source_url }}" target="_blank"><strong>{{ event.title }}</strong></a> 
          [{% for cat in event.categories %}<a href="{{ ('/by-category/#' + (cat | slugify)) | url }}">{{ cat }}</a>{% if not loop.last %}, {% endif %}{% endfor %}]
          ({{ event.age_restriction }}) - {{ event.price_display }}
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>
