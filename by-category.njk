---
layout: layout.njk
title: Events By Category
---

<h2>UPCOMING EVENTS BY CATEGORY</h2>
<hr>

{% set categoryGroups = events | groupByCategory %}

{% for group in categoryGroups %}
  <section class="category-group" id="{{ group.category | slugify }}">
    <h3>{{ group.category }}</h3>
    <ul class="event-list">
      {% for event in group.events %}
        <li>
          * [{{ event.start_datetime | readableDate }}] 
          [<a href="/by-venue/#{{ event.venue_id }}">{{ event.venue_id }}</a>] 
          <a href="{{ event.source_url }}" target="_blank"><strong>{{ event.title }}</strong></a> 
          ({{ event.age_restriction }}) - {{ event.price_display }}
        </li>
      {% endfor %}
    </ul>
  </section>
{% else %}
  <p>No categories with upcoming events found.</p>
{% endfor %}
